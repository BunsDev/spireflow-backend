{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./build", // Compiled JavaScript files will be output here
    "rootDir": "./src" // This is where TypeScript looks for source files
  },
  "include": [
    "src/**/*.ts" // This ensures TypeScript compiles all .ts files within the src directory
  ]
}
